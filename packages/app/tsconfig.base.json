{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "typeRoots": ["./src/app/graphql", "../../node_modules/@types"],
    "paths": {
      "app/*": ["./src/app/*"],
      "embed/*": ["./src/embed/*"],
      "sandbox/*": ["./src/sandbox/*"]
    },
    "plugins": [
      {
        "name": "@divyenduz/ts-graphql-plugin"
      }
    ]
  }
}
